<main>
  <div class="container">
    <div class="row">
    <div class="col-12">
        <h2>みんなのレシピ</h2>
        </div>
    <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-md-3">
          <div class="card">
            <div class="card-body text-center">
              <h5><%= recipe.title %></h5>
              <%= link_to root_path do %>
              <%= attachment_image_tag recipe, :image, :fill, 100, 100, class:"h-100 w-100" %>
              <% end %>
              <p><%= recipe.impression %></p>
              <P><%= recipe.user.name %></P>
            </div>
          </div>
        </div>
      <%end%>
    </div>
      
    
    </div>
  </div>
</main>