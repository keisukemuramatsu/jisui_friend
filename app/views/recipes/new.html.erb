<main>
  <div class="container">
    <div class="row">
      <h4 class="col py-4"><span  class="bg-light">新規レシピ登録</span></h4>
    </div>
    <div class="row justify-content-center">
      <%= form_with model:@recipe, url:recipes_path, local:true do |f| %>
        <table class="table table-md table-borderless">
          <tr class="form-group">
              <th><%= f.label :title,"レシピタイトル", class:"pt-2 col-form-label" %></th>
              <td><%= f.text_field :title %></td>
          </tr>
          <tr class="form-group">
            <th><%= f.label :image ,"レシピ画像", class:"col-form-label" %></th>
              <td><%= f.attachment_field :image, class:"align-bottom" %></td>
          </tr>
          <tr class="form-group">
              <th><%= f.label :foodstuff, "食材(分量)", class:"col-form-label" %></th>
              <td><%= f.text_area :foodstuff, placeholder: "例:人参(1/2本)" %></td>
          </tr>
          <tr class="form-group">
              <th><%= f.label :instructions,"手順", class:"col-form-label" %></th>
              <td><%= f.text_area :instructions, placeholder: "例:1.皮をむく" %></td>
          </tr>
          <tr class="form-group">
              <th><%= f.label :impression,"作成メモ", class:"col-form-label" %></th>
              <td><%= f.text_area :impression, placeholder: "例:美味しくできました。" %></td>
          </tr>
          <tr class="form-group">
            <th>レシピタグ</th>
            <td>タグ入力フォーム</td>
          </tr>
            <tr class="actions text-center">
              <th colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></th>
            </tr>
        <% end %>
        </table>
    </div>
</main>