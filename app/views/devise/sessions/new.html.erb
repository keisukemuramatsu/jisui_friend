<main>
  <div class="container">
    <div class="row">
      <h4 class="col">ログイン</h4>
    </div>
    <div class="row justify-content-center">
      <table class="table table-sm table-borderless">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <tr class="form-group">
            <th><%= f.label :email ,"メールアドレス", class:"col-sm-8 col-form-label" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "メールアドレス" %></td>
          </tr>
          <tr class="form-group">
            <th><%= f.label :password,"パスワード", class:"col-sm-8 col-form-label" %></th>
            <td><%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "パスワード(６文字以上)" %></td>
          </tr>
          <tr class="actions text-center">
            <th colspan="3"><%= f.submit "ログイン", class: "btn btn-success w-25" %></th>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="row">
      <div class="col py-2">はじめての方はこちらから</div>
    </div>
    <div class="row">
      <div class="col py-2 pl-5"><%= link_to "新規会員登録へ進む", new_user_registration_path %></div>
    </div>
  </div>
</main>