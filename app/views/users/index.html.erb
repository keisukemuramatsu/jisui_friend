<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10 my-3 rounded bg-primary">
        <h2><u><strong>会員一覧</strong></u></h2>
        <div class="row justify-content-center">
          <% @users.each do |user| %>
            <div class="card m-2" style="width: 18rem;">
              <div class="card-body">
                <div class="h5 card-title">
                  <%= link_to user_path(user.id) do %>
                    <%= user.name %>さん
                    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, class:"h-100 w-100 p-2", fallback: "l_e_others_501.png" %>
                  <% end %>
                </div>
                <% if user.introduction.present? %>
                  <p class="card-text"><%= truncate(user.introduction, length:25, line:0) %></p>
                <% else %>
                  <p class="card-text">紹介文考え中！！
                  </p>

                    <% end %>
                <%= link_to "詳細を見る",  root_path, class: 'nav-link text-light btn mx-1' %>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <%= paginate @users %>
    </div>
  </div>
</main>